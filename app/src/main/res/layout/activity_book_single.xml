<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:id="@+id/container_single_book"
    android:orientation="vertical"
    tools:context="com.vanessapr.appbibliotecafain.BookSingleActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.vanessapr.appbibliotecafain.fragments.BookFragment"
        android:id="@+id/fragment_single_book"
        android:layout_gravity="center_horizontal"
        tools:layout="@layout/fragment_book" />

</LinearLayout>
