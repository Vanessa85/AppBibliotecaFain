<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_book_titulo"
        android:textColor="@color/black_900"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/tv_book_titulo"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/textViewCodigo"
            android:textColor="@color/black_900"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="@string/textViewCodigo"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_book_codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_book_codigo"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewAutor"
            android:textColor="@color/black_900"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_book_autor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Davis,Gordon B.Olson,Margrethe H." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textViewEditorial"
            android:textColor="@color/black_900"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="Editorial"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_book_editorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="s.e." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewCiudad"
            android:textColor="@color/black_900"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="Lugar "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_book_ciudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lima" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewAnio"
            android:textColor="@color/black_900"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="Fecha "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_book_anio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1985" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPaginas"
            android:textColor="@color/black_900"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="Páginas "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_book_paginas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18pag." />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewContenido"
        android:textColor="@color/black_900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Contenido " />

    <TextView
        android:id="@+id/tv_book_contenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unidades geológicas graficados y criterios de clasificación de Yacimientos Minerales,Principales Yacimientos de Minerales metálicos y no metálicos del Perú,Listas de yacimientos por metales y Departamentos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descargar"
        android:id="@+id/btnDownloadCD" />

</LinearLayout>